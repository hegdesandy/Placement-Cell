<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:text="Placement Cell"
            style="@style/viewParent.headerText" />
        <TextView
            android:text="#StayHomeStaySafe"
            android:textColor="#3f729b"
            style="@style/viewParent.headerText.contentText"
            android:layout_marginBottom="20dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="20dp"
                android:minHeight="200dp"
                app:cardBackgroundColor="#13D3B4"
                app:cardCornerRadius="16dp"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="false">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="15dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Company Details, \nList of companies visited"
                            android:textColor="@color/whiteBodyColor"
                            android:textSize="18sp"
                            android:layout_marginStart="20dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="20dp"
                            android:text="Description \n..."
                            android:textColor="@color/whiteBodyColor"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:padding="10dp"
                            android:layout_marginLeft="20dp"
                            android:text="Our top companies \n  •	Microsoft\n  •	JP Morgan\n  •	Google"
                            android:textColor="@color/whiteBodyColor"
                            android:textSize="13sp"/>
                    </LinearLayout>
                    <ImageView
                        style="@style/homeCardImage"
                        android:layout_width="103dp"
                        android:layout_height="108dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginStart="20dp"
                        android:maxHeight="90dp"
                        android:src="@drawable/building" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/addForum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="20dp"
                android:minHeight="200dp"
                app:cardBackgroundColor="#13D3B4"
                app:cardCornerRadius="16dp"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="false">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="15dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Company Details \n"
                            android:textColor="@color/whiteBodyColor"
                            android:textSize="18sp"
                            android:layout_marginStart="20dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="20dp"
                            android:text="Introducing postpaid \nfor shopping."
                            android:textColor="@color/whiteBodyColor"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ImageView
                        style="@style/homeCardImage"
                        android:layout_width="103dp"
                        android:layout_height="108dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginStart="20dp"
                        android:maxHeight="90dp"
                        android:src="@drawable/student" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>